<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KIRegister" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <!--        <item name="colorSecondary">@color/secondaryColor</item>-->
        <!--        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>-->
        <!--        <item name="colorOnSecondary">@color/secondaryTextColor</item>-->
        <!-- Status bar color. -->

        <!-- Customize your theme here. -->

        <item name="preferenceTheme">@style/PrefsTheme</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.KO.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.KO.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.KO.LargeComponent</item>


    </style>

    <style name="RoundedTopCornersCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="DateSelectorOutLineStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outline_colors</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:layout">@layout/settings_layout</item>
    </style>

    <style name="Theme.KIRegister.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.KIRegister.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.KIRegister.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>


    <!--shape appearance -->
    <style name="ShapeAppearance.KO.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.KO.ProfileImageComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>

    </style>

    <style name="ShapeAppearance.KO.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerFamilyTopRight">cut</item>
    </style>

    <style name="ShapeAppearance.KO.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ButtonTheme" parent="TextAppearance.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/DeleteButtonTheme</item>
    </style>

    <style name="DeleteButtonTheme">
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


</resources>